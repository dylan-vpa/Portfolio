---
import companies from "../info/companies";
---

<section>
  <h2>TRAYECTORIA</h2>
  <ul id="cardsContainer">
    {
      companies.map((info) => {
        return (
          <ul class="timelineItem">
            <div class="timelineBullet">&bull;</div>
            <div class="timelineContent">
              <h3>{info.name}</h3>
              <>
                <p>{info.description}</p>
                <a
                  href={info.url}
                  target="_blank"
                  class="textButton"
                >
                  <span class="link">Conoce mas</span><span>â†’</span>
                </a>
              </>
            </div>
          </ul>
        );
      })
    }
  </ul>
</section>

<style>
  section {
    margin: 64px 0;
    display: flex;
    flex-direction: column;
    gap: 32px;
  }
  .timelineItem {
    position: relative;
    margin-bottom: 64px;
  }

  .timelineItem::before {
    content: "";
    position: absolute;
    left: 0.5rem;
    top: 0;
    height: calc(100% + 64px);
    border-left: 2px solid rgba(0, 0, 0, 0.2);
  }

  @media (min-width: 768px) {
    .timelineItem {
      display: grid;
      grid-template-columns: 1fr;
      column-gap: 3.75rem;
      align-items: start;
    }
  }

  .timelineBullet {
    position: absolute;
    left: 0.15rem;
    top: -0.45rem;
    font-size: 36px;
    color: var(--primary);
  }

  .timelineContent {
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding-left: 2.5rem;
  }

  .timelineContent ul {
    display: flex;
    gap: 8px;
    list-style: none;
  }
</style>
