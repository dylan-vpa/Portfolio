<style>
  #header {
    padding: 16px 0;
    position: fixed;
    z-index: 3;
    top: 0;
    left: 0;
    display: flex;
    justify-content: center;
    width: 100%;
    background: #ffffff42;
    backdrop-filter: blur(6.1px);
    -webkit-backdrop-filter: blur(6.1px);
    border: 1px solid #d9d9d9;
  }

  div {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: var(--siteMaxWidth);
  }

  nav ul {
    display: flex;
    gap: 16px;
    list-style: none;
  }

  #logo {
    font-family: serif;
    font-size: 24px;
  }

  #buttonContainer {
    width: 181.33px;
    display: flex;
    justify-content: end;
  }
</style>

<script is:inline>
  const neswletterBtn = document.getElementById("neswletterBtn");
  const logo = document.getElementById("logo")

  window.addEventListener("scroll", () => {
    if (window.scrollY > 120) {
      neswletterBtn.classList.remove("containedButton");
      neswletterBtn.classList.add("textButton");
      neswletterBtn.classList.add("link");
    } else {
      neswletterBtn.classList.remove("textButton");
      neswletterBtn.classList.remove("link");
      neswletterBtn.classList.add("containedButton");
    }
  });

  scrollUpBtn.addEventListener("click", () => {
    window.scrollTo({ top: 0, behavior: "smooth" });
  });
</script>