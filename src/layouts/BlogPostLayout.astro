---
import Layout from "./Layout.astro";
import Newsletter from "../components/ui/Newsletter.astro";
import { slugify, formatDate } from "../scripts/index";

const { frontmatter } = Astro.props;
const { title, description, date, category } = frontmatter;
---

<Layout title={title} description="">
  <main>
    <article>
      <section>
        <p>{category}</p>
        <h1>{title}</h1>
        <h2>{description}</h2>
        <p>
          {
            formatDate(date)
          }
        </p>
      </section>
      <hr />
      <section
      >
        <slot />
      </section>
    </article>
  </main>
  <hr>
  <Newsletter />
</Layout>
<style>
  article {
    display: flex;
    flex-direction: column;
    gap: 64px;
  }

  section {
    display: flex;
    flex-direction: column;
    gap: 16px; 
  }

  hr {
    border: 0.1px solid #6b728010;
  }

</style>
